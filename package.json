{
  "name": "client",
  "version": "0.1.0",
  "description": "Blog Client",
  "author": "Herbie Vine <vineherbie@gmail.com> (https://herbievine.com)",
  "license": "MIT",
  "private": true,
  "scripts": {
    "serve": "next -p 4000",
    "build": "next build && next export",
    "start": "next start",
    "type-check": "tsc",
    "prettier": "prettier -w \"(__tests__|pages|components|utils|cypress)/**/*.(ts|js|tsx|jsx)\"",
    "gen": "graphql-codegen --config codegen.yml",
    "cy:open": "cypress open",
    "cy:report": "npx mochawesome-merge cypress/report/mochawesome-report/*.json > cypress/report/output.json && npx marge cypress/report/output.json --reportDir ./ --inline",
    "test": "start-server-and-test serve http://localhost:4000 test:all",
    "test:all": "yarn test:jest && yarn test:cy",
    "test:jest": "jest --config ./jest.config.json --coverage",
    "test:cy": "cypress run --record --key 9ebae204-0aa4-4244-9ab9-5ffa0b2121e8 --reporter mochawesome"
  },
  "dependencies": {
    "@apollo/client": "^3.3.17",
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.1",
    "dayjs": "^1.10.4",
    "graphql": "^15.5.0",
    "mocha": "^8.4.0",
    "next": "10.2.0",
    "next-apollo": "^5.0.4",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "^6.0.2",
    "remark-gfm": "^1.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@graphql-codegen/cli": "1.21.4",
    "@graphql-codegen/typescript": "1.22.0",
    "@graphql-codegen/typescript-operations": "1.17.16",
    "@graphql-codegen/typescript-react-apollo": "2.2.4",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.5",
    "autoprefixer": "^10.2.5",
    "axe-core": "^4.2.1",
    "babel-jest": "^26.6.3",
    "cypress": "^7.3.0",
    "cypress-axe": "^0.12.2",
    "jest": "^26.6.3",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "postcss": "^8.2.15",
    "prettier": "^2.3.0",
    "start-server-and-test": "^1.12.2",
    "tailwindcss": "^2.1.2",
    "typescript": "^4.2.4"
  }
}
